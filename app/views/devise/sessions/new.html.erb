<div class="site_wrapper" style="text-align: center; padding-top:100px;">
  <h4>START REHEARSING</h4>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
      <%= f.email_field :email, autofocus: true, placeholder:'Username', class:'login' %><br>
      <%= f.password_field :password, autocomplete: "off", placeholder:'Password', class:'login' %>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "LOG IN", class:'login_submit' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>